extends tmplayout

block content 
    h1.title Post Edit
    h2.minititle
        a(href='/home')  Food&Life 
    table(align='center')
        form(action='/post/edit/updateDB?id='+`${item._id}` method='post')
            tr
                th Topic : 
                td
                    input(type='radio' name='topic' value='free' checked='')
                    | free
                    input(type='radio' name='topic' value='recipe')
                    | recipe
                    input(type='radio' name='topic' value='tip')
                    | tip
                    br
            tr
                th Title : 
                    td
                        input(type='text' name='title' value=`${item.title}`)
                        br
            tr
                th Text : 
                    td
                        textarea(rows='20' cols='85%' name='text' ) #{item.content}
            tr
                th(colspan='2')
                    input(type='submit' name='submit' value='Upload')
